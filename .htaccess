<IfModule mod_rewrite.c>
    RewriteEngine On

    # Jika document root subdomain mengarah ke folder proyek (bukan public/),
    # arahkan semua request ke folder public/ milik Laravel.
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>

# Fallback jika mod_rewrite tidak aktif, Anda tetap perlu mengarahkan
# Document Root subdomain ke public/ agar Laravel berjalan dengan benar.
